{
    "name": "conorsmith/twersona",
    "description": "A library to watch a Twitter profile for any updates to profile information",
    "version": "0.2.0",
    "keywords": ["twitter", "profile"],
    "homepage": "https://github.com/conorsmith/twersona",
    "license": "MIT",
    "authors": [
        {
            "name": "Conor Smith",
            "email": "conor@tercet.io",
            "homepage": "http://conorsmith.ie"
        }
    ],
    "require": {
    	"php": ">=5.4.0",
        "j7mbo/twitter-api-php": "dev-master",
        "league/flysystem": "0.2.*"
    },
    "autoload": {
        "psr-4": {
            "Twersona\\": "src/"
        }
    },
    "post-install-cmd": [
        "chmod a+w vendor/conorsmith/twersona/storage/"
    ],
    "post-update-cmd": [
        "chmod a+w vendor/conorsmith/twersona/storage/"
    ]
}
